<Window x:Class="FootballUI.PassLengthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pass" Height="132" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="196*" />
            <ColumnDefinition Width="82*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Grid.Row="0" BorderThickness="2">
            <Label Content="Minimum pass length (dm):" Grid.Column="0" Grid.Row="0"/>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" BorderThickness="2">
            <Label Content="Maximum pass length (dm):" Grid.Column="0" Grid.Row="1"/>
        </Border>
        <TextBox Name="minPassText" Grid.Column="1" Grid.Row="0"/>
        <TextBox Name="maxPassText" Grid.Column="1" Grid.Row="1"/>
        <Button Grid.ColumnSpan="2" Content="Find Passes" Grid.Column="0" Grid.Row="2" Click="Button_Click" />
    </Grid>
</Window>
